{
  "manifest_version": 3,
  "name": "YouTube Video Chatbot",
  "version": "1.0",
  "description": "Ask questions about the current YouTube video using AI",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://www.youtube.com/*",
    "http://localhost:8000/*"
  ]
}
